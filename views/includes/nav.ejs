<header class="main-header">
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <!-- <li class="main-header__item">
        <a href="/another" class="<%= path === '/shop'?'active':'' %>">shop</a>
      </li> -->
      <li class="main-header__item">
        <a href="/products" class="<%= path === '/products'?'active':'' %>"
          >Products</a
        >
      </li>

      <% if(isAuthenticated) { %>
      <li class="main-header__item">
        <a href="/cart" class="<%= path === '/cart'?'active':'' %>">Cart</a>
      </li>
      <li class="main-header__item">
        <a href="/orders" class="<%= path === '/orders'?'active':'' %>"
          >Orders</a
        >
      </li>
      <li class="main-header__item">
        <a
          href="/add-product"
          class="<%= path === '/add-product'?'active':'' %>"
          >add product</a
        >
      </li>
      <li class="main-header__item">
        <a
          href="/admin/products"
          class="<%= path === '/adminProducts'?'active':'' %>"
          >Admin Products</a
        >
      </li>
      <% } %>
    </ul>

    <ul class="main-header__item-list">
      <% if(!isAuthenticated) { %>
      <li class="main-header__item">
        <a class="<%= path === '/login'?'active':'' %>" href="/login">Login</a>
      </li>
      <li class="main-header__item">
        <a class="<%= path === '/signup'?'active':'' %>" href="/signup"
          >Signup</a
        >
      </li>
      <% }else { %>
      <li class="main-header__item">
        <form action="/logout" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit">
            Logout
          </button>
        </form>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
