<!-- this page is used for login -->

<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/add-product.css" />
<link rel="stylesheet" href="/css/auth.css" />
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <% if(errorMessage) { %>
        <div class="alert-message alert-message-error"><%= errorMessage %></div>
      <% } %>
      <form class="login-form" method="POST" action="/signup" novalidate>
        <div class="form-control">
          <label for="email">Email</label>
          <input 
            class="<%= validationErrors.find(e => e.param ==='email') ? 'invalid':'' %>"
            type="email" 
            name="email" 
            id="email" 
            placeholder="enter email" 
            value="<%= oldInput.email %>"/>
        </div>
        <div class="form-control">
          <label for="password">password</label>
          <input 
            class="<%= validationErrors.find(e => e.param ==='password') ? 'invalid':'' %>"
            type="password" 
            name="password" 
            id="password" 
            placeholder="**************" />
        </div>
        <div class="form-control">
          <label for="password">Confirm password</label>
          <input 
            class="<%= validationErrors.find(e => e.param ==='confirmPassword') ? 'invalid':'' %>"
            type="password" 
            name="confirmPassword" 
            id="confirmPassword" 
            placeholder="**************" />
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="login-btn" type="submit">
          Sign Up
        </button>
      </form>
    </main>
<%- include('../includes/end.ejs') %>