extends ./layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            each product in prods
                //.grid is same as div.grid
                .grid
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="", alt="someImage")
                        .card__content
                            h2.product__price inr 200
                            p.product__description a very interesting book about so many facts
                        .card__actions
                            button.btn Add to cart
        else
            h1 No products